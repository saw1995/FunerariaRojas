    <script>
        $(document).ready(function () {
            let menu = '@btnMenu';
            let subMenu = '@btnSubMenu';
            document.getElementById("btnMenu" + menu).classList.add("active");
            document.getElementById("btnSubMenu" + subMenu).classList.add("active");
            document.getElementById("listaMenu" + menu).classList.add("menu-open");
        });

        function seleccionarButton(_id) {

            for (let i = 1; i <= 5; i++) {
                let btn = "btnMenu" + i;
                document.getElementById(btn).classList.remove("active");
            }

            document.getElementById("btnMenu" + _id).classList.add("active");
